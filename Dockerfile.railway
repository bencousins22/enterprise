# Agent Zero Enterprise - Railway Deployment
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    nginx \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Clone Agent Zero repository
RUN git clone https://github.com/frdel/agent-zero.git /tmp/agent-zero && \
    cp -r /tmp/agent-zero/* /app/ && \
    rm -rf /tmp/agent-zero

# Install Python dependencies with fallback
RUN pip install --no-cache-dir -r requirements.txt 2>/dev/null || \
    pip install --no-cache-dir \
    fastapi \
    uvicorn[standard] \
    python-dotenv \
    openai \
    anthropic \
    python-multipart \
    aiofiles \
    websockets \
    pydantic \
    httpx

# Copy enterprise configurations
COPY nginx.conf /etc/nginx/nginx.conf
COPY start.sh /app/start.sh

# Set up directories
RUN mkdir -p /app/data /app/logs /var/log/nginx && \
    chmod +x /app/start.sh

# Environment defaults
ENV PYTHONUNBUFFERED=1
ENV PORT=80
ENV API_PORT=50001

# Healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=90s --retries=3 \
    CMD curl -f http://localhost/health || exit 1

EXPOSE 80

CMD ["/bin/bash", "/app/start.sh"]
